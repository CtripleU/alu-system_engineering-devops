#!/usr/bin/env bash
# configure Nginx to be running and listening on port 80 of all the serverâ€™s active IPv4 IPs
sed -i 's/listen\s.[0-9]+\sdefault_server/listen 80 default_server' /etc/nginx/sites-available/default
sed -i 's/listen\s\[::\]:.[0-9]\sdefault_server/listen [::]:80 default_server' /etc/nginx/sites-enabled/default

sudo service nginx status
